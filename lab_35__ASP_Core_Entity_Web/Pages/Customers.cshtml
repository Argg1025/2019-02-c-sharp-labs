@page
@model lab_35__ASP_Core_Entity_Web.Pages.CustomersModel
@{
//ViewData["Title"] = "Customers";
}
<style>
    .container{

    }
    .col-sm-3{
        padding: 3vh 2vw;
        margin: 2vh 0;
    }
    .one {
        background: rgb(0, 255, 33);
    }
    .two{
        background: rgb(255, 0, 0);
    }
    .three{
        background: rgb(0, 38, 255);
    }
    .four{
        background: rgb(182, 255, 0);
    }
</style>
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <a class="navbar-brand" href="https://www.spartaglobal.com">
                Sparta
            </a>
            <img src="https://images.unsplash.com/photo-1551025440-bf5df68c4308?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1951&q=80" width="100vw" height="50vh" />
        </div>
        <div class="navbar-collapse">
            <ul class="nav navbar-nav">
                <li>Page 1</li>
                <li>Page 2</li>
                <li>Page 3</li>
                <li>Page 4</li>
                <li>Page 5</li>
            </ul>
        </div>
    </nav>


    <!-- add  customer -->
    <div class="row">
        <h6>Add a new customer</h6>
        <form method="post">
            <div><input asp-for="customer.CustomerID" />ID</div>
            <div><input asp-for="customer.ContactName" />Name</div>
            <div><input asp-for="customer.CompanyName" />Company</div>
            <div><input asp-for="customer.Country" />Country</div>
            <div><input asp-for="customer.City" />City</div>
            <input type="submit"/>
        </form>
    </div>


    @foreach (var c in Model.customers)
    {
    <div class="row">
        <div class="col-sm-3 one">
            @c.CustomerID
        </div>
        <div class="col-sm-3 two">
            @c.ContactName
        </div>
        <div class="col-sm-3 three">
            @c.Country
        </div>
        <div class="col-sm-3 four">
            @c.City
        </div>
    </div>
    }
</div>
    




